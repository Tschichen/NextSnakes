{
    "REFERENCE": "GENOMES", #where to find the reference genomes
    "BINS": "Workflow/scripts", #where to find the scripts used in the workflow
    "GENOME": { #which genomes to use and how the reference fasta is named
                "Dm6": "dm6"
              },
    "NAME": { #extension for genome file name in case different typed of reference are used, e.g. genomic, artificial, organelle ...
              "Dm6": {
                  "untreated": {
                      "std": ""
                  }
              }
            },
    "SOURCE": { #which organisms are to be parsed for which samples
                "Dm6": {
                    "untreated": {
                        "std": "dm6"
                    }
                }
              },
    "SAMPLES":{ #which samples to analyze
                "Dm6": {
                    "untreated": {
                        "std": ["GSM461177_untreat_paired_subset_r1","GSM461177_untreat_paired_subset_r2"]#unpaired
                    }
                }
              },
#QC options
    "QC": "fastqc", # add qc tool or set to 'OFF'
#Trimming options
    "ADAPTERS": "adapters.fa", #path to adapter fasta used for trimming
    "READ_MINLEN": "10", # discard reads shorter than that
    "TRIMENV": "trimgalore", #see QC
    "TRIMBIN": "trim-galore",
    "TRIMMING": { #options for trimming for each sample/condition
                  "Dm6": {
                      "untreated": {
                          "std": # See above
                          [
                              {  # trimming options here, --paired is not required, will be resolved by rules
                                 "-q": "15",
                                 "--length": "8",
                                 "-e": "0.15"
                              }
                          ]
                      }
                  }
                },
#Mapping software options
    "MAPPERENV": "minimap", # which conda env to use for mapping
    "MAPPERBIN": "minimap2", #how the mapper binary is called
    "MAPPINGTYPE": "single", #choice=single, no paired end in minimap
    "MAPPING": { #options for mapping for each sample/condition
                 "Dm6": {
                     "untreated": {
                         "std": # first entry in list is a dict of options, second can be e.g. appendix to index name, useful especially with minimap if using different kmer sizes
                         [
                             {
                                 "-k": "14"#option for setting kmer size while indexing
                             },
                             {
                                 "-ax": "map-ont",
                                 "-ub": "",
                                 "-Y": "",
                                 "-L": "",
                                 "--MD": "",
                                 "-d": ""
                             },
                             "_k14" #how to name the index after indexing and for mapping
                         ]
                     }
                 }
               },
#Annotation options
    "ANNOTATE" : "-w ON", #-w ON enables one line per feature annotation, including start/end of the feature, output can become quite large, disable by adding empty string ("") as value
    "ANNOTATION": { #which annotation to use
                    "Dm6": "dm6.gff.gz"
                 }
}
